<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>

        <% @books.each do |book| %>
    <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show" , "/books/#{book.id}" %></td>
                <td><%= link_to "Edit" , "/books/#{book.id}/edit" %></td>
                <td><%= link_to "Destroy" , "/books/#{book.id}" , method: :delete , "data-confirm" => "Are you sure?" %></td>
            </tr>
        <% end %>
    </tbody>
</table>



<div class="form_with">
    <h2>New book</h2>

    <!--入力フォーム-->
    <%= form_with model:@book, url:"/books", local:true do |f| %>

        <!--エラーメッセージ-->
        <% if @book.errors.any? %>
            <div class="red-border">
            <p class="red_message"><%= pluralize(@book.errors.count, "error") %>  errors prohibited this book from being saved:</p>
                <ul>
                    <% @book.errors.full_messages.each do |msg| %>
                    <li class="error_message"><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="box">
            <h4>Title</h4>
            <%= f.text_field :title %>
            </div>

        <div class="box">
            <h4>Body</h4>
            <%= f.text_area :body %>
        </div>

        <div class="block">
            <%= f.submit "  Create Book  " %>
        </div>

    <% end %>
</div>