<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>

        <% @books.each do |book| %>
    <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show" , show_path(book.id) %></td>
                <td><%= link_to "Edit" , "/bookers/#{book.id}/edit" %></td>
                <td><%= link_to "Destroy" , "/bookers/#{book.id}"  , method: :delete , "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
        <% end %>
    </tbody>
</table>



<div class="form_with">
    <h2>New book</h2>

    <%= form_with model:@book, url:"/bookers", local:true do |f| %>

        <div class="box">
            <h4>Title</h4>
            <%= f.text_field :title %>
            </div>
        <h4>Body</h4>

        <div class="box">
            <%= f.text_area :body %>
        </div>

        <div class="block">
            <%= f.submit "  Create Book  " %>
        </div>

    <% end %>
</div>