<div class="form_with">
    <h1>Editing Book</h1>

    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

        <div class="box">
            <h4>Title</h4>
            <%= f.text_field :title %>
            </div>
        <h4>Body</h4>

        <div class="box">
            <%= f.text_area :body %>
        </div>

        <div class="block">
            <%= f.submit "  Update Book  " %>
        </div>

    <% end %>

    <%= link_to "Show" , show_path(@book.id) %> | <%= link_to "Back" , "/books" %>
</div>