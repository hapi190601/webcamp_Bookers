<div class="form_with">
    <h1>Editing Book</h1>

    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

        <!--エラーメッセージ-->
         <% if @book.errors.any? %>
            <div class="red-border">
            <p class="red_message"><%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:</p>
                <ul>
                    <% @book.errors.full_messages.each do |msg| %>
                    <li class="error_message"><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="box">
            <h4>Title</h4>
            <%= f.text_field :title %>
            </div>
        <h4>Body</h4>

        <div class="box">
            <%= f.text_area :body %>
        </div>

        <div class="block">
            <%= f.submit "  Update Book  " %>
        </div>

    <% end %>

    <%= link_to "Show" , book_path(@book.id) %> | <%= link_to "Back" , books_path %>
</div>